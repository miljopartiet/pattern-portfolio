<% wrap_layout :layout do %>
  <div id="wrap">
    <header role="banner" id="site-banner">
      <div id="global-nav">
          <div class="inner">
            <div class="navigation">
              <div id="logo">
                <a href="/">Miljöpartiet</a>
              </div>
              <ul id="go-to-navigation">
                <li><a href="#nav" id="skip-to-navigation" class="toggler">
                  <span>Meny</span>
                </a></li>
              </ul>
              <nav id="nav" role="navigation">
                <ul id="primary-nav">
                  <li class="nav-item-primary first leaf<%= ' active-trail' if data.page.current_nav == 'basics' %>"><a href="/basics.html"><span>Basics</span></a></li>
                  <li class="nav-item-primary first leaf<%= ' active-trail' if data.page.current_nav == 'components' %>"><a href="/components.html"><span>Pattern Library</span></a></li>
                  <li class="nav-item-primary first leaf<%= ' active-trail' if data.page.current_nav == 'pages' %>"><a href="/pages/index.html"><span>Pages</span></a></li>
                </ul>
              </nav>
            </div>
          </div>
      </div>
    </header>

    <div id="main">
      <%= yield %>
    </div>

    <footer id="site-footer">
      <% if content_for? :breadcrumbs %>
      <nav class="breadcrumbs">
        <p><%= yield_content :breadcrumbs %></p>
      </nav>
      <% end %>
      <div class="inner">
        <p id="logo-full"><a href="/">Miljöpartiet de gröna</a></p>
        <p id="copyright" class="copy">
          Except where otherwise noted, content on this site is licensed under a Creative Commons Attribution 3.0 Unported license.
          We would love your feedback. <a href="mailto:webb@mp.se">Write to us!</a>
        </p>
      </div>
    </footer>
  </div>
  <div id="cookies">
    <div>
      <p>
        Vår webbplats <a href="#">använder cookies</a>.
        Genom att surfa vidare accepterar du dessa cookies.
      </p>
      <a href="#" class="confirm action">OK, stäng meddelandet</a>
    </div>
  </div>
<% end %>
